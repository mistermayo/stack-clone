
<div class="row">
  <div class="col-md-12">
    <h1><%= @question.description %></h1>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <% if @question.answers.any? %>

    <h4>Here are the answers for this question:</h4>
    <ul>
      <% @question.answers.each do |answer| %>
      <li>
        <%= link_to answer.description, user_question_answers_path(@question, answer) %> |
        <%= link_to "Edit", edit_user_question_answer_path(@question, answer) %> |
        <%= link_to "Delete", user_question_answer_path(@question, answer),
        :data => {:confirm => "Are you sure?",
          :method => "delete"} %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

  <% else %>
  <div class="row">
    <div class="col-md-12 center">
      <p>There are no answers yet!</p>
      <% end %>

      <p><%= link_to "Add a answer", new_user_question_answer_path(@user, @question) %></p>
      <p><%= link_to "Edit", edit_user_question_path(@user, @question) %></p>
      <p><%= link_to "Delete", user_question_path(@user, @question),
      :data => {:confirm => "You sure?",
        :method => "delete"} %></p>
        <p><%= link_to "Return to questions", user_questions_path %></p>
      </div>
    </div>
