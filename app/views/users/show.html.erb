
    <h1>Your Questions</h1>

    <ul>
      <% if @user.questions.any? %>

      <h4>Here are the questions for this user:</h4>
      <ul>
        <% @user.questions.each do |question| %>
        <li>
          <%= link_to question.description, question_path(@user, question) %> |
          <%= link_to "Edit", edit_question_path(@user, question) %> |
          <%= link_to "Delete", question_path(@user, question),
          :data => {:confirm => "Are you sure?",
            :method => "delete"} %>
          </li>
          <% end %>
        </ul>
        <h1>All Questions</h1>
        <li>
          <%= link_to question.description, questions_path(@questions) %>
        </li>

          <p>There are no questions yet!</p>

          <%= link_to "Add a new question", new_question_path(@user) %>
          <p><%= link_to "Edit", edit_user_path(@user) %></p>
          <p><%= link_to "Delete", user_path(@user),
          :data => {:confirm => "You sure?",
            :method => "delete"} %></p>
            <p><%= link_to "Return to Feed", users_path %></p>
            <% end %>
